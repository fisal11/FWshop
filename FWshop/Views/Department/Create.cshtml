@model FWshop.Models.DepartmentVM
@{
    ViewBag.Title = "Create Department";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Create Department</h1>
<form  asp-controller="Department" asp-action="Create" method="post">

    <label> Department Name </label>
    <input type="text" asp-for="DepartmentName" class= "form-control"/>
    <span class="text-danger" asp-validation-for="DepartmentName"></span>
    <br>
    <label> Department Code </label>
    <input type="text" asp-for="DepartmentCode" class= "form-control"/>
    <span class="text-danger" asp-validation-for="DepartmentCode"></span>
    <br>
    <center>
     <input type="submit" value="Save" class="btn btn-primary"/>
    </center>

</form>

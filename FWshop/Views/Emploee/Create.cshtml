@model FWshop.Models.EmploeeVM
@{
    ViewBag.Title = "Create Emploee";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1>Add Emploee</h1>
<form  asp-controller="Emploee" enctype="multipart/form-data" asp-action="Create" method="post">

    <label asp-for="Name"> Name </label>
    <input type="text" asp-for="Name" class= "form-control"/>
    <span class="text-danger" asp-validation-for="Name"></span>
    <br>
    <label asp-for="Email"> Email  </label>
    <input type="text" asp-for="Email" class= "form-control"/>
    <span class="text-danger" asp-validation-for="Email"></span>
    <br>
    <label asp-for="Salary"> Salary </label>
    <input type="text" asp-for="Salary" class= "form-control"/>
    <span class="text-danger" asp-validation-for="Salary"></span>
    <br>
    <label asp-for="Address"> Address </label>
    <input type="text" asp-for="Address" class= "form-control"/>
    <span class="text-danger" asp-validation-for="Address"></span>
    <br>
    <label asp-for="HirDate"> HirDate </label>
    <input type="text" asp-for="HirDate" class= "form-control"/>
    <span class="text-danger" asp-validation-for="HirDate"></span>
    <br>
    <label asp-for="Notes"> Notes </label>
    <textarea asp-for="Notes" class= "form-control" rows="4">Notes</textarea>
    <span class="text-danger" asp-validation-for="Notes"></span>
    <br>
    <label  asp-for="DepartmentId"> Department </label>
    <select class= "form-control" asp-for="DepartmentId" asp-items="@(SelectList)ViewBag.DepartmentList">
        <option > Chooce Department </option>
    </select>
    <span class="text-danger" asp-validation-for="DepartmentId"></span>
   @* <label >Country</label>
    <select class= "form-control" id="#CountryId" asp-items="@(SelectList)ViewBag.CountryList">
        <option > Chooce Country </option>
    </select>
    <br><br>
    <label > City </label>
    <select class= "form-control" id="#CityId">
        <option> Chooce City </option>
    </select>
    <br><br>
    <label asp-for="DistrictId"> District </label>
    <select class= "form-control" asp-for="DistrictId">
        <option> Chooce District </option>
    </select>*@
    <br><br>
    <div class= "custom-control custom-checkbox ">
    <input type="checkbox" asp-for="IsActive" class= "custom-control-input"/>
    <label class= "custom-control-label" asp-for="IsActive"> IsActive </label>
    </div>
    <span class="text-danger" asp-validation-for="IsActive"></span>
    <br>
    <label asp-for="PhotoUrl"> Upload Photo </label>
    <input type="file" asp-for="PhotoUrl" class= "form-control"/>
    <br>
    <label asp-for="CvUrl"> Upload Cv </label>
    <input type="file" asp-for="CvUrl" class= "form-control"/>
    <br>
    <center>
     <input type="submit" value="Add" class="btn btn-primary"/>
    </center>
    <br>

</form>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>



@model FWshop.Models.EmploeeVM
@{
    ViewBag.Title = "Edit Emploee";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}

<h1>Edit Emploee</h1>

<form  asp-controller="Emploee" asp-action="Edit" method="post">

    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" class= "form-control"/>
    <span class="text-danger" asp-validation-for="Name"></span>
    <br /><br />

    <label asp-for="Email">Email</label>
    <input type="text" asp-for="Email" class= "form-control"/>
    <span class="text-danger" asp-validation-for="Email"></span>
    <br /><br />

    <label asp-for="Salary">Salary</label>
    <input type="text" asp-for="Salary" class= "form-control"/>
    <span class="text-danger" asp-validation-for="Salary"></span>
    <br /><br />

    <label asp-for="Address">Address</label>
    <input type="text" asp-for="Address" class= "form-control"/>
    <span class="text-danger" asp-validation-for="Address"></span>
    <br /><br />

    <label asp-for="HirDate">HirDate</label>
    <input type="text" asp-for="HirDate" class= "form-control"/>
    <span class="text-danger" asp-validation-for="HirDate"></span>
    <br /><br />

    <label asp-for="Notes">Notes</label>
    <textarea asp-for="Notes" class= "form-control" rows="4">Notes</textarea>
    <span class="text-danger" asp-validation-for="Notes"></span>
    <br /><br />

    <label asp-for="DepartmentId">Department</label>
    <select class="form-control" asp-for="DepartmentId"
       asp-items="@(SelectList)ViewBag.DepartmentList">
        <option class="form-control"> Chooce Department </option>
    </select>
    <span class="text-danger" asp-validation-for="DepartmentId"></span>
    <br><br>

    <div class= "custom-control custom-checkbox ">
    <input type="checkbox" asp-for="IsActive" class= "custom-control-input"/>
    <label class= "custom-control-label" asp-for="IsActive">IsActive</label>
    </div>
    <span class="text-danger" asp-validation-for="IsActive"></span>
    <br /><br />

    <center>
     <input type="submit" value="Edit" class="btn btn-primary"/>
    </center>
    <br>

</form>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>


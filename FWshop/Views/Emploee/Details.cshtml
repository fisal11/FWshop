@model FWshop.Models.EmploeeVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Emploee Details</h2>
<br />
<form  asp-controller="Emploee"  asp-action="Details">

    <label asp-for="Name">Name </label>
    <input type="text" asp-for="Name" disabled class= "form-control"/>
    
    <br>
    <label asp-for="PhotoName">Photo </label>
    <div>
        <img src="~/Files/Photos/@Model.PhotoName"
         width="100" height="120"/>
    </div>
    
    <br/>
    <label asp-for="Email">Email </label>
    <input type="text" asp-for="Email" disabled class= "form-control"/>
    
    <br>
    <label asp-for="Salary">Salary </label>
    <input type="text" asp-for="Salary" disabled class= "form-control"/>
    
    <br>
    <label asp-for="Address">Address </label>
    <input type="text" asp-for="Address" disabled class= "form-control"/>
    
    <br>
    <label asp-for="HirDate">HirDate</label>
    <input type="text" asp-for="HirDate" disabled class= "form-control"/>
    
    <br>
    <label asp-for="IsActive">IsActive </label>
    <input type="text" asp-for="IsActive" disabled class= "form-control"/>
    
    <br>
    <label asp-for="DepartmentName">Department</label>
    <input type="text" asp-for="DepartmentName" disabled class= "form-control"/>
    
    <br>
@*  <label asp-for="DistrictName">District</label>
    <input type="text" asp-for="DistrictName" disabled class= "form-control"/>
    <br>*@
    <label asp-for="Notes">Notes </label>
    <input type="text" asp-for="Notes" disabled class= "form-control"/>
    
    <br>
    <label asp-for="CvName"> Cv </label>
    <div>
         <a href="~/Files/Docs/@Model.CvName"> Download Cv</a>
    </div>

    <br>
    <center>
     <a asp-controller="Emploee" asp-action="Index" class="btn btn-primary">Back</a>
    </center> 
    <br>
     
</form>



